    <div id="dashboard" class="pt-2 md:grid md:grid-cols-12 min-h-[80%] pb-10 flex flex-wrap justify-around bg-opacity-70 bg-zinc-100 dark:bg-zinc-900 dark:bg-opacity-70">
        <!-- search, create and view past posts -->
        <div id="options" class="md:col-span-3">

            <!-- buttons -->
            <div id="newAndSave" class="rounded grid grid-cols-1 justify-center bg-gray-100 dark:bg-gray-900 mx-2 my-1">
                <div class="px-2 py-2 mx-auto">
                    <a href="../dashboard" id="new"
                        class="rounded font-semibold bg-teal-700 text-gray-50 dark:bg-sky-900 dark:text-gray-200 p-2 hover:scale-110 transition-all">NEW</a>
                </div>
            </div>
            <!-- end buttons --> 

            <!-- individual post -->
            {{#each entries as |entry|}}
            <a href="../dashboard/{{id}}"
                class="rounded flex flex-wrap justify-between bg-gray-200 hover:bg-gray-300 dark:bg-gray-800 dark:hover:bg-sky-900 transition-all mx-2 my-1" id={{id}}>
                <div class="px-2 py-2 flex flex-col">
                    <p class="text-gray-900 dark:text-gray-300">{{title}}</p>
                    <p class="text-gray-900 dark:text-gray-300">{{
                    format_date createdAt }}</p>
                </div>
                <div class="px-2 py-2 my-auto">
                    <button data-id={{id}}
                        class="deleteBtn rounded-full border-red-600 font-semibold bg-red-700 text-gray-50 dark:bg-gray-300 dark:text-red-700 px-2 mr-2 hover:scale-110 transition-all">Delete</button>
                </div>
            </a>
            {{/each}}
            <!-- end individual post -->

            <!-- end search, create and view past posts -->

        </div>

        <!-- viewing and editing posts -->
        <div id="field" class="md:col-span-9">
            <div class="px-6 py-4 flex flex-col">
                <p class="font-bold text-3xl mb-2 text-gray-900 dark:bg-gray-800 dark:text-gray-300 px-3" >{{singleEntry.title}}</p>
                <p class="text-gray-900 dark:bg-gray-800 dark:text-gray-400 text-base px-3">{{singleEntry.body}}
                </p>
            </div>

        </div>
        <!-- end viewing and editing posts -->
    </div>

<script src="/js/deleteEntry.js"></script>
