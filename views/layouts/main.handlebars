<html lang="en" id="html" class="">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link href="/css/output.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nanum+Brush+Script&family=Permanent+Marker&family=Reenie+Beanie&family=Shadows+Into+Light&family=Sriracha&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="bg-contain bg-center bg-whiteboard dark:text-gray-300 dark:bg-chalkboard bg-cover text-sm sm:text-md md:text-lg lg:text-xl xl:text-2xl">
    <div class="p-2 flex justify-center">
      <h1>The Blog</h1>
      <!-- light mode/dark mode toggle -->
      <label
        for="bg-toggle"
        class="absolute right-0 items-center cursor-pointer m-1"
      >
        <input type="checkbox" value="" id="bg-toggle" class="sr-only peer" />
        <div
          class="w-11 h-6 bg-gray-700 peer-focus:outline-none rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-amber-300"
        >
        </div>
      </label>
      <!-- end light/dark mode toggle -->
    </div>
    <!-- Nav Bar -->
    <div id="nav" class="bg-amber-300 dark:bg-sky-900 flex justify-center">
      <ul class="flex flex-wrap justify-around">
        <li class="mx-5 my-1">
          <a
            class="text-gray-900 hover:text-gray-600 dark:text-amber-50 dark:hover:text-amber-300 transition-all"
            href="../"
          >Home</a>
        </li>
        <li class="mx-5 my-1">
          <a
            class="text-gray-900 hover:text-gray-600 dark:text-amber-50 dark:hover:text-amber-300"
            href="../dashboard"
          >Dashboard</a>
        </li>
        <li class="mx-5 my-1">
          <a
            class="text-gray-900 hover:text-gray-600 dark:text-amber-50 dark:hover:text-amber-300"
            href="../login"
          >Login</a>
        </li>
        <li class="mx-5 my-1">
          <a
            class="text-gray-900 hover:text-gray-600 dark:text-amber-50 dark:hover:text-amber-300"
            href="../"
            id="logout"
          >Logout</a>
        </li>
      </ul>

    </div>
    <!-- End Nav Bar -->

    <!-- Start blog cards Section -->
    <div class="min-h-[80%]">
      {{{body}}}
    </div>

    <!-- End Blog Cards -->

    <footer class="mb-10">
      <div class="flex flex-wrap justify-around">
        <a href="https://github.com/treavorwills" target="_blank">Treavor Wills
          - 2022</a>
        <a
          href="https://treavorwills.github.io/Portfolio/"
          target="_blank"
        >Portfolio</a>
        <a href="https://github.com/treavorwills/blog" target="_blank">GitHub
          Repository</a>
      </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/logout.js"></script>

  </body>

</html>